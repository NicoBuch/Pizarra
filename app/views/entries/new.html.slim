.col-md-4
.col-md-4
  h1 Nueva Entrada
  br
  - if @entry.errors.any?
    .error_explanation
      ul
        - @entry.errors.each do |a, e|
          li = e

  = form_for @entry do |f|
    div
      = f.label 'Fecha para Transacción'
      br/
      = f.date_field :transaction_date, required: true, format: :default, placeholder: 'dd/mm/aaaa'
    br
    div
      = f.label 'Tipo de Transacción'
      br/
      = label_tag :compra, "Compro"
      = f.radio_button :transaction_type, "C", checked: true
      br/
      = label_tag :venta, "Vendo"
      = f.radio_button :transaction_type, "V"
    br
    div
      = f.label 'Monto'
      br/
      = f.number_field :my_amount, autocomplete: "off", step: 'any', required: true
    br
    div
      = f.label 'Moneda'
      br/
      = f.text_field :my_coin, autocomplete: "off", required: true
    br
    div
      = f.label 'Pago en', id: "label"
      br/
      = f.text_field :your_coin, autocomplete: "off", required: true
    br
    div
      = f.label 'Cotización'
      br/
      = f.number_field :unity_price, autocomplete: "off", step: 'any', required: true
    br
    div
      .col-md-8
        = link_to 'Volver', entries_path, class: 'btn btn-primary'
      .col-md-4
        = f.submit "Crear", class: 'btn btn-default'
